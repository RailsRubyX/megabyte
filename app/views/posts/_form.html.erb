<div class="col-md-12">
	<div class="row">
		<div class="create-edit-blog">
			<%= form_for @post do |f| %>
					<% if @post.errors.any? %>
						<div id="errors">
							<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
							<ul>
								<% @post.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					<% end %>
					<div class="form_group">
						<%= f.label :Заголовок %><br>
						<%= f.text_field :title, class: "form-control" %>
					</div>
				<br>		
					<div class="form_group">
						<%= f.label :Текст %><br>
						<%= f.text_area :body, class: "blog-text-area form-control" %>
					</div>
				<br>
					<div class="form_group">
						<%= f.label :Изображение %><br>
						<%= f.file_field :image %>
					</div>
				<br>
					<div class="blog-edit text-center">
						<p><%= f.submit class: "btn btn-danger" %>
						<%= link_to 'Назад', edit_user_registration_path, class: "btn btn-primary" %></p>
					</div>
			<% end %>
		</div>
	</div>
</div>