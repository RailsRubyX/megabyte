<div class="blog-content">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="blog-img">
					<%= image_tag @post.image.url(:medium), class: "img-responsive img-thumbnail" %>

				</div>
			</div>
		</div>
		<div class="row">
			<div class="blog-title text-center">
				<h3><%= @post.title %></h3>
			</div>
			<div class="blog-edit text-center">
				<% if user_signed_in? %>
					<p><%= link_to 'Редактировать', edit_post_path(@post), class: "btn btn-sm btn-danger" %>
					<%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены?'},class: "btn btn-sm btn-danger" %>
					<%= link_to 'Назад', root_path, class: "btn btn-sm btn-primary" %>	
					</p>
				<% end %>
			</div>
		</div>
		
		<div class="row">
			<div class="blog-body">
				<p><%= @post.body %></p>
			</div>
		</div>
	
	</div>
</div>