<div class="container">
	<p><%= image_tag @post.image.url %></p>
	<h1><%= @post.title %></h1>
	
	<% if user_signed_in? %>
		<p><%= link_to 'Редактировать', edit_post_path(@post) %> | 
		<%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены?'} %></p>
	<% end %>

	<p><%= @post.body %></p>
	
</div>