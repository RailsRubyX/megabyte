<div class="new-registration">
  <div class="col-md-4 col-md-offset-4">
   <div class="row">
    <div class="panel-heading text-center">
      <h2>Регистрация</h2>
    </div>  

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="form_group">
    <%= f.label :Мене_звати %><br />
    <%= f.text_field :name, placeholder: "П.І.Б.", autofocus: true, class: "form-control" %>
  </div>
  <br>
  <div class="form_group">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Електрона пошта", autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
<br>
<div class="form_group">
    <%= f.label :Мобільний_телефон %><br />
    <%= f.telephone_field :phone, placeholder: "Номер телефону (зразок: 380971234567)", autofocus: true, class: "form-control" %>
  </div>
 <br> 
  <div class="form_group">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символів мінімум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
<br>
  <div class="form_group">
    <%= f.label :Підтвердження_паролю %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
<br>
<div class="form_group">
    <%= f.label :Адреса %><br />
    <%= f.text_area :adress, placeholder: "Адреса", autofocus: true, class: "blog-text-area form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Реєстрація", class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
</div>
</div>