<a class="anchor" id="adminpage"></a>
<div class="edit-registration">
  <div class="container">
    <div class="row">
      <div class="panel-heading text-center">
        <h2>Редагування даних</h2>
      </div>  
    </div>    

    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="form_group">
            <%= f.label :Мене_звати %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
         <br>
          <div class="form_group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        <br>
          <div class="form_group">
            <%= f.label :Мобільний_телефон %><br />
            <%= f.telephone_field :phone, autofocus: true, class: "form-control" %>
          </div>
        <br>
          <div class="form_group">
            <%= f.label :Адреса %><br />
            <%= f.text_area :adress, autofocus: true, class: "blog-text-area form-control" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        <br>
          <div class="form_group">
            <%= f.label :Новий_пароль %> <i>(Якщо не хочете змінювати пароль, залиште поле порожнім)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <% if @minimum_password_length %>
              
              <em><%= @minimum_password_length %> символів мінімум</em>
            <% end %>
          </div>
        <br>
          <div class="form_group">
            <%= f.label :Підтвердження_нового_паролю %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        <br>
          <div class="form_group">
            <%= f.label :Дійсний_пароль %> <i>(Введіть дійсний пароль для збереження змін)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
          </div>
        <br>
          <div class="actions">
            <%= f.submit "Оновити", class: "btn btn-danger" %>
            <%= link_to "Назад", :back, class: "btn btn-back"%>
          </div>
        <% end %>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
         <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <div class="form_group admin-button">
              <p class="admin_title"><strong>Створення нової публікації</strong></p>
              <%= link_to "Нова публікація", new_post_path, class: "btn btn-danger" %>
          </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="form_group admin-button">
                <p class="admin_title"><strong>Створення нової послуги</strong></p>
                <%= link_to "Нова послуга", new_price_path, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="form_group admin-button">
                <p class="admin_title"><strong>Створення нового сервісу</strong></p>
                <%= link_to "Новий сервіс", new_service_path, class: "btn btn-danger" %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<script>
  var myHash = location.hash; //получаем значение хеша
  //location.hash = ''; //очищаем хеш 
  if(myHash[1] != undefined){ //проверяем, есть ли в хеше какое-то значение
    $('html, body').animate({scrollTop: $(myHash).offset().top}, 1500); //скроллим за полсекунды
};
</script>